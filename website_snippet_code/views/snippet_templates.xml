<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="snippet_code" name="Code Highlight">
        <section class="o_website_snippet_code auto">
            <div class="container">
                <div class="row">
                    <div class="col-lg-10 offset-lg-1">
                        <pre class="o_website_snippet_code_raw">def test():
    pass</pre>
                    </div>
                </div>
            </div>
        </section>
    </template>

    <template id="snippets" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_effect']/div[hasclass('o_panel_body')]">
            <t t-snippet="website_snippet_code.snippet_code"
               t-thumbnail="/website_snippet_code/static/src/img/code.png"/>
        </xpath>
    </template>

    <template id="snippet_code_opt" name="Snippet Code Options" inherit_id="website.snippet_options">
        <xpath expr="//div[@data-js='background']" position="before">
            <div data-selector=".o_website_snippet_code"> <!-- Options group -->
                <we-collapse-area>
                    <we-toggler><i class="fa fa-fw fa-sun-o"/>Syntax</we-toggler>
                    <we-collapse>
                        <we-button data-select-class="auto">Automatic</we-button>
                        <we-button data-select-class="plaintext">plaintext</we-button>
                        <we-button data-select-class="python">Python</we-button>
                        <we-button data-select-class="xml">HTML, XML</we-button>
                        <we-button data-select-class="css">CSS</we-button>
                        <we-button data-select-class="javascript">Javascript</we-button>
                        <we-button data-select-class="coffeescript">CoffeeScript</we-button>
                        <we-button data-select-class="java">Java</we-button>
                        <we-button data-select-class="ruby">Ruby</we-button>
                        <we-button data-select-class="markdown">Markdown</we-button>
                        <we-button data-select-class="php">PHP</we-button>
                        <we-button data-select-class="objectivec">Objective-C</we-button>
                        <we-button data-select-class="bash">Bash</we-button>
                        <we-button data-select-class="shell">Shell Session</we-button>
                        <we-button data-select-class="sql">SQL</we-button>
                        <we-button data-select-class="nohighlight">No Highlighting</we-button>
                    </we-collapse>
                </we-collapse-area>
                <div data-js="snippet_code_options" data-selector=".o_website_snippet_code"/>
            </div>
        </xpath>
    </template>
</odoo>
